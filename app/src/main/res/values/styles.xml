<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <!-- ToolBar style -->
    <style name="ToolBarStyle" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primaryColor</item>
        <item name="actionMenuTextColor">@android:color/black</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!-- Material button style -->
    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
    </style>

    <!-- Floating action button style -->
    <style name="fabStyle" parent="Widget.Design.FloatingActionButton">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:background">@null</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/fab_margin</item>
        <item name="android:layout_marginEnd">@dimen/fab_margin</item>
        <item name="tint">@color/secondaryTextColor</item>
    </style>

    <!-- Secondary Floating action button style -->
    <style name="secondaryFabStyle" parent="fabStyle">
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="tint">@color/secondaryTextColor</item>
    </style>

    <!-- CardView style -->
    <style name="EasyVGPTheme.cardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/primaryLightColor</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">2dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">6dp</item>
    </style>

    <!-- EditText style -->
    <style name="editTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/tv_input_margin</item>
        <item name="android:layout_marginStart">@dimen/tv_input_margin</item>
        <item name="android:drawablePadding">@dimen/edit_text_drawable_padding</item>
    </style>

    <!-- EditTextInputLayout style -->
    <style name="EasyVGPTheme.editTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/tv_input_margin</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <!-- EditTextInput style -->
    <style name="EasyVGPTheme.editTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:inputType">text</item>
        <item name="endIconMode">clear_text</item>
    </style>

    <!-- Title TextView style -->
    <style name="EasyVGPTheme.tvTitleStyle" parent="TextAppearance.AppCompat.Title">
        <item name="android:layout_marginTop">@dimen/tv_input_margin</item>
        <item name="android:drawablePadding">@dimen/edit_text_drawable_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Body 1 TextView style -->
    <style name="tvBody1Style" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginTop">@dimen/tv_input_margin</item>
        <item name="android:layout_marginStart">@dimen/tv_input_margin</item>
        <item name="android:layout_marginEnd">@dimen/tv_input_margin</item>
        <item name="android:drawablePadding">@dimen/edit_text_drawable_padding</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Body 1 TextView style -->
    <style name="tvBody1StyleNoMargin" parent="TextAppearance.AppCompat.Body1">
        <item name="android:drawablePadding">@dimen/edit_text_drawable_padding</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!-- Separator style -->
    <style name="separatorStyle" parent="AppTheme">
        <item name="android:background">@color/secondaryColor</item>
        <item name="android:layout_marginStart">@dimen/divider_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/divider_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/divider_top_margin</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- Switch style -->
    <style name="EasyVGPTheme.switch" parent="AppTheme">
        <item name="android:layout_marginTop">@dimen/tv_input_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <!-- Sign-in Activity style -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>
        <item name="colorControlActivated">@android:color/darker_gray</item>
        <item name="colorControlHighlight">@android:color/darker_gray</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/darker_gray</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
</resources>